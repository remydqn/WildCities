


<div class="container">
  <div class="row justify-center">
    <div class="form-criteria">
      <p>What do you want to do in LYON</p>
      <%= simple_form_for @criteria, url: criterias_path, method: :patch, class: 'edit_criteria' do |f| %>

      <!-- <div class="col-xs-12"> -->

      <%= f.input :kind, collection: Criteria::KIND, as: :radio_buttons %>
      <!-- </div> -->
    </div>



    <p>How <strong>WILD</strong> are you ?</p>

    <input name="criteria[wild]" type="range" min="0" max="10">

    <%= f.button :submit, class: 'btn btn-7'%>
    <% end %>
  </div>
</div>

