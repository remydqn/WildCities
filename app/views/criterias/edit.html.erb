

<%= simple_form_for @criteria, url: criterias_path, method: :patch do |f| %>

  <%= f.input :dance, label: 'dance'  %>
  <%= f.input :drink, label: 'drink'  %>
  <%= f.input :culture, label: 'culture'  %>
